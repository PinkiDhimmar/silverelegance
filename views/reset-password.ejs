<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Reset Password</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/style.css" rel="stylesheet">
</head>
<body>
<%- include('partials/navbar1.ejs') %>
  <div class="container container-resetpass mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow rounded-4">
          <div class="card-body">
            <h3 class="card-title text-center mb-4">Reset Password</h3>
            <p class="text-muted text-center mb-4">Enter your email address to reset your password.</p>
<% if (typeof message !== 'undefined') { %>
  <div class="alert alert-<%= success ? 'success' : 'danger' %> text-center">
    <%- message %>
  </div>
<% } %>

<% if (token) { %>
<form method="POST" action="/reset-password">
  <input type="hidden" name="email" value="<%= email %>">
  <input type="hidden" name="token" value="<%= token %>">
  <input type="password" name="password" required placeholder="New password" class="form-control mb-3">
  <button type="submit" class="btn reset">Reset Password</button>
</form>
<% } %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
