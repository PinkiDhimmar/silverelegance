<html>
    <head>
        <title>Login</title>
        <link href="/public/css/style.css" rel="stylesheet">
        <!-- Bootstrap CSS icon link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
        <!-- Bootstrap CSS link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            crossorigin="anonymous">
    </head>
	<body>
        <%- include('partials/navbar1.ejs') %>
		<div class="login-container">
            <div class="login-box">
			<form action="/login" method="post">
                <h1>Member Log In</h1>
                <p>Login to your account</p>

                <label for="email">Email:</label>
				<input type="text" name="email" placeholder="Email" id="email" required>
				<label for="password">Password:</label>
				<input type="password" name="password" placeholder="Password" id="password" required>
                <button type="submit" class="btn-login">LOGIN</button><br>
                <p> forgot your password?<a href="">Click here</a>to reset</p><br>
                <hr>
                <p style="font-weight: bold;"> Not a member yet?</p>
                <a class="reg-box" href="/register">Register </a>
                
            </form>
            </div>
		</div>
<footer>
    <%- include('partials/footer.ejs') %>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
</body>
</html>