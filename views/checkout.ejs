<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Checkout - Silver Elegance</title>
  <link href="/public/css/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

  <%- include('partials/navbar1') %>
    <div class="checkout">
          <h1>Checkout</h1>    
    </div>

    <div class="checkout-container container">
      
        <!-- Center (inline Login & Guest) -->
      <div class="checkout-header container">
          
        <div class="checkout-main">

          <% if (!user && !guest) { %>
            <div class="mb-4 plc">
              <h5>Please Login to Continue</h5>
              <form method="POST" action="/login">
                <input type="hidden" name="redirect" value="/checkout" />
                <div class="mb-3">
                  <input type="email" name="email" class="form-control" placeholder="Email Address" required>
                </div>
                <div class="mb-3">
                  <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>
                <button type="submit" class="btn">Login & Continue</button>
              </form>
            </div>
            <div class="hr-or"><span>OR</span></div>
            <!-- Guest Checkout -->
            <div class="guest-container justify-content-center mb-3">
              <form method="POST" action="/checkout/guest">
                <div class="mb-3">
                  <input type="text" name="name" class="form-control" placeholder="Full Name" required />
                </div>
                <div class="mb-3">
                  <input type="email" name="email" class="form-control" placeholder="Email" required />
                </div>
                <div class="mb-3">
                  <input type="text" name="address" id="guest-address" class="form-control"
                    placeholder="Shipping Address" required />
                </div>
                <button type="submit" class="btn guest">Continue as Guest</button>

              </form>
            </div>
        </div>
        <div class="container">
        <% } else { %>
          <!-- LOGGED IN VIEW -->
          <div class="logged-in-view">
            <p>Proceed to complete your order.</p>
          <form method="POST" action="/checkout/place-order">
            <h4>Contact Information</h4>
            <% if (user) { %>
            <p><strong>Name:</strong><%= user.name %></p>
            <p><strong>Email:</strong><%= user.email %></p>
              <% } else if (guest) { %>
                <p><strong>Name:</strong> <%= guest.name %></p>
                <p><strong>Email:</strong> <%= guest.email %></p>
              <% } %>
            <h4 class="mt-4">Shipping Address</h4>
            <div class="mb-3">
              <label>Address</label>
              <input type="text" name="address" class="form-control" required>
            </div>
            <div class="mb-3">
              <label>City</label>
              <input type="text" name="city" class="form-control" required>
            </div>
            <div class="mb-3">
              <label>Postal Code</label>
              <input type="text" name="postal_code" class="form-control" required>
            </div>

            <h4 class="mt-4">Payment Method</h4>
            <div class="mb-3">
              <select name="payment_method" class="form-select" required>
                <option value="pu">Pick UP</option>
                <option value="stripe">Credit/Debit Card (via Stripe)</option>
              </select>
            </div>

            <button type="submit" class="btn btn-success">Securely Place Order</button>
          </form>
          </div>
          <% } %>

        </div>
      </div>
     
        <div class="container checkout-cart-summary">
        <!--cart -> right side-->
        <div class="checkout-cart">
            <h3>My Cart</h3>
        </div>
        <div class="checkout-cart pt-3">
          <% if (cart.length > 0) { %>
            <% cart.forEach(item=> { %>
              <div class="cart-item d-flex align-items-center mb-3">
                <div class="item-image position-relative me-3">
                  <img src="/public/images/<%=item.image %>" class="image rounded" style="width: 70px; height: 70px; object-fit: cover;">
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                  <%= item.quantity %></span>
                </div>
                <div class="item-info flex-grow-1">
                  <h6 class="mb-1"><%= item.name %></h6>
                   <small>$<%= item.price.toFixed(2) %></small>
                </div>

              </div>
              <% }) %>
                <% } else { %>
                  <p>Your cart is empty.</p>
                  <% } %>
        </div>

      <!-- RIGHT SIDE -->
      <div class="checkout-summary border rounded p-3 shadow-sm mt-3 pt-3">
        <h5>Order Summary</h5>

        <table class="table table-sm">
          <thead>
            <tr>
              <th>Item</th>
              <th>Qty</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody id="summary-body">
            <% cart.forEach(item=> { %>
              <tr data-id="<%= item.id %>">
                <td>
                  <%= item.name %>
                </td>
                <td class="summary-qty">
                  <%= item.quantity %>
                </td>
                <td class="summary-subtotal">$<%= (item.price * item.quantity).toFixed(2) %>
                </td>
              </tr>
              <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="2"><strong>Total</strong></td>
              <td><strong>$<span id="order-total">
                    <%= total.toFixed(2) %>
                  </span></strong></td>
            </tr>
          </tfoot>
        </table>
      </div>

        </div>
</div>
   
      <!-- Script function for quantity (+ and -) -->
      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const updateCartAndSummary = () => {
            let grandTotal = 0;

            // Loop over each cart item
            document.querySelectorAll('.cart-item').forEach((item, index) => {
              const qtyInput = item.querySelector('.qty-input');
              const unitPrice = parseFloat(item.querySelector('.unit-price').textContent);
              const subtotalEl = item.querySelector('.subtotal');
              const qty = parseInt(qtyInput.value) || 1;

              const subtotal = (qty * unitPrice).toFixed(2);
              subtotalEl.textContent = subtotal;

              grandTotal += parseFloat(subtotal);

              // Update corresponding row in summary table
              const summaryRow = document.querySelectorAll('#summary-body tr')[index];
              if (summaryRow) {
                summaryRow.querySelector('.summary-qty').textContent = qty;
                summaryRow.querySelector('.summary-subtotal').textContent = `$${subtotal}`;
              }
            });

            // Update total in summary
            const totalEl = document.getElementById('order-total');
            totalEl.textContent = grandTotal.toFixed(2);
          };

          // Listen for +/- clicks
          document.querySelectorAll('.qty-btn').forEach(button => {
            button.addEventListener('click', () => {
              const input = button.parentElement.querySelector('.qty-input');
              let qty = parseInt(input.value) || 1;

              if (button.classList.contains('plus')) {
                qty++;
              } else if (button.classList.contains('minus') && qty > 1) {
                qty--;
              }

              input.value = qty;
              updateCartAndSummary();
            });
          });

          // Also allow manual input
          document.querySelectorAll('.qty-input').forEach(input => {
            input.addEventListener('change', updateCartAndSummary);
          });
        });
      </script>


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
       <%- include('partials/footer') %>
      
</body>

</html>