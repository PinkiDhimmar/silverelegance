<!-- views/contact.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Us - Silver Elegance</title>
  <link href="/public/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include (`partials/navbar1.ejs`) %>

  <div class="container my-5 pt-5">
    <h2 class="mb-5">Contact Us</h2>
    <p>We’d love to hear from you! Please fill out the form below and we’ll get back to you shortly.</p>

    <form action="/contact" method="POST" class="row g-3">
      <div class="col-md-6">
        <label for="name" class="form-label">Your Name</label>
        <input type="text" class="form-control" name="name" id="name" required>
      </div>

      <div class="col-md-6">
        <label for="email" class="form-label">Your Email</label>
        <input type="email" class="form-control" name="email" id="email" required>
      </div>

      <div class="col-12">
        <label for="message" class="form-label">Your Message</label>
        <textarea class="form-control" name="message" id="message" rows="5" required></textarea>
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">Send Message</button>
      </div>
    </form>

    <% if (success) { %>
      <div class="alert alert-success mt-4">Thank you! Your message has been sent.</div>
    <% } %>
  </div>

  <%- include (`partials/footer.ejs`) %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
