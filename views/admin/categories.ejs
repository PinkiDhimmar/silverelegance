<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('../partials/admin-sidebar') %>

<div style="margin-left: 250px; padding: 2rem; margin-top: 30px;">
  <h2 class="mb-4">Product Categories</h2>

  <a href="/admin/categories/add" class="btn btn-primary mb-3">Add New Category</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Slug</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(cat => { %>
        <tr>
          <td><%= cat.id %></td>
          <td><%= cat.name %></td>
          <td><%= cat.slug %></td>
          <td>
            <a href="/admin/categories/edit/<%= cat.id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/admin/categories/delete/<%= cat.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this category?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>
