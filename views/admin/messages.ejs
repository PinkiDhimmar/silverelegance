<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard - Silver Elegance</title>
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

<div class="wrapper">
<%- include ('../partials/admin-sidebar') %>
<div class="content">
<div class="topbar d-flex justify-content-between align-items-center">
<span><strong>Welcome, <%= user.name %></strong></span>
<a href="/logout" class="btn btn-sm btn-outline-secondary">Logout</a>
</div>

<div class="page-title">
<h3>Customer Messages</h3>
<table class="table table-bordered">
<thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Message</th>
        <th>Reply</th>
    </tr>
</thead>
<tbody>
    <% messages.forEach(msg=> { %>
        <tr>
            <td><%= msg.name %></td>
            <td><%= msg.email %></td>
            <td><%= msg.subject %></td>
            <td><%= msg.message %></td>
            <td>
                  <% if (msg.reply) { %>
                  <div class="text-success"><%= msg.reply %></div>
                <% } else { %>
                  <button class="btn btn-sm" data-bs-toggle="modal" data-bs-target="#replyModal<%= msg.id %>">Reply</button>
                <% } %>
            </td>
        </tr>

        <!-- Reply Modal -->
<div class="modal fade" id="replyModal<%= msg.id %>" tabindex="-1" aria-labelledby="replyModalLabel<%= msg.id %>" aria-hidden="true">
              <div class="modal-dialog">
                <form method="POST" action="/admin/messages/reply/<%= msg.id %>">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="replyModalLabel<%= msg.id %>">Reply to <%= msg.name %></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <p><strong>Subject:</strong> <%= msg.subject %></p>
                      <p><strong>Message:</strong> <%= msg.message %></p>
                      <div class="form-floating">
                        <textarea class="form-control" name="reply_content" id="replyText<%= msg.id %>" style="height: 100px;" required></textarea>
                        <label for="replyText<%= msg.id %>">Your reply</label>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn ">Send Reply</button>
                      <button type="button" class="btn " data-bs-dismiss="modal">Cancel</button>
                    </div>
                  </div>
                </form>
              </div>
</div>
        <% }) %>
</tbody>
</table>

</div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>