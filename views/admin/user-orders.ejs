<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>User Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
 .content {
      margin-left: 240px;
      margin-top: 30px;
      padding: 3rem;
      flex-grow: 1;
      width: calc(100% - 240px);
    }
</style>
<body>
<div class="wrapper">
  <%- include ('../partials/admin-sidebar') %>
  <div class="topbar">
    <div>Welcome, <%= user.name %> | <a href="/logout" class="btn btn-sm btn-outline-secondary">Logout</a></div>
  </div>
<div class="content">
  <h2>User Order History</h2>

  <% if (orders.length === 0) { %>
    <p>No orders found for this user.</p>
  <% } else { %>
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Total ($)</th>
          <th>Status</th>
          <th>Tracking</th>
          <th>Order Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td>#<%= order.order_id %></td>
            <td>$<%= order.total_amount.toFixed(2) %></td>
            <td><%= order.status %></td>
            <td>
              <% if (order.tracking_number) { %>
                <%= order.tracking_number %>
              <% } else { %>
                â€”
              <% } %>
            </td>
            <td><%= new Date(order.created_at).toLocaleString() %></td>
            <td>
              <a href="/admin/orders/<%= order.order_id %>/edit" class="btn btn-sm btn-warning">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <a href="/admin/users" class="btn btn-secondary mt-3">Back to Users</a>
</div>
</div>
</body>
</html>
