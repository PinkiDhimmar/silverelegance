<html>
    <head>
        <title>Login</title>
        <link href="/public/css/style.css" rel="stylesheet">

        <!-- Bootstrap CSS icon link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
        <!-- Bootstrap CSS link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            crossorigin="anonymous">
    </head>
	<body>
        <%- include('partials/navbar1.ejs') %>
		<div class="register-container">
            <div class="register-box">
			<form action="/register" method="post">
                <h1>Register</h1>
                <p>Complete the form below to Register</p><br>

                <p style="font-weight: bold; text-align: left;">PERSONAL DETAILS</p>
                <input class="r" type="text" name="name" placeholder="Full Name*" id="name" required>                
				<input class="r" type="text" name="email" placeholder="Email*" id="email" required><br>


                <p style="font-weight: bold; text-align: left;">DATE OF BIRTH</p>
                <input class="r" type="date" name="DOB" placeholder="Date of Birth" id="DOB" required><br>

                <p style="font-weight: bold; text-align: left;">LOCATION</p>
                <input class="r" id="address" name="address" type="text" class="form-control" autocomplete="off" placeholder="Start typing address" required>
                <input class="r" id="city" name="city" type="text" class="form-control mt-2" placeholder="City*" required>
                <input class="r" id="postal_code" name="postal_code" type="text" class="form-control mt-2" placeholder="Postal Code*" required>
                <input class="r" id="country" name="country" type="text" class="form-control mt-2" placeholder="New Zealand" readonly>
                
                <p style="font-weight: bold; text-align: left;">CONTACT DETAILS</p>
                <input class="r" type="text" name="phone" placeholder="Mobile Number*" id="phone" required><br>

                <p style="font-weight: bold; text-align: left;">PASSWORD</p>
                <p style="text-align: left;">7 characters minimum, must include a capital letter, no space</p>
				<input class="r" type="password" name="password" placeholder="Password*" id="password" required>
                <input class="r" type="password" name="confirmPassword" placeholder="Confirm Password*" id="confirmPassword" required>
               
                <div class="form-check my-3">
                <input class="form-check-input" type="checkbox" id="agreeCheckbox">
                <label class="form-check-label" for="agreeCheckbox" >
                    <span>I agree to the <a href="/terms&condition">Terms and Conditions</a></span>
                </label>
                </div>
            
                <button type="submit" class="btn-register">CREATE ACCOUNT</button><br>
                <p>Already have an account? <a href="/login">Login into your account</a></p>
                
            </form>
            </div>
		</div>
<footer>
    <%- include('partials/footer.ejs') %>
</footer>
<script>
  const agreeCheckbox = document.getElementById('agreeCheckbox');

  window.addEventListener('load', () => {
    // âœ… Auto-check if coming from Terms page
    if (localStorage.getItem('agreedToTerms') === 'true') {
      agreeCheckbox.checked = true;

      // ðŸ§¹ Clear the flag after use
      localStorage.removeItem('agreedToTerms');
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>