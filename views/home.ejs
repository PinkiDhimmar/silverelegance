<html>

<head>
    <title>Silver Elegance</title>
    <link href="/public/css/style.css" rel="stylesheet">
    <!-- Bootstrap CSS icon link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">

</head>

<body>
<header>
<!--Corousel-->
<%- include('partials/slider.ejs') %>
</header>
<!--navbar-->
<%- include('partials/navbar1.ejs') %>
<!--about section-->
<div class="container mt-1 py-5" id="about">
    <div class="text-center py-3">
        <h1>About Us</h1>
        <div class="hr"></div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src="/public/images/ring.jpg" class="img-fluid image1" alt="ring">
        </div>
        <div class="col-md-6">
            <h5 class="about-text"> Our Perfect Silver Jewellery</h5>
            <h2>Let's create your perfect look.</h2>
            <p>Welcome to Silver Elegance, Our collection features handcrafted pieces that blend timeless elegance with modern design. Each item is crafted with care and
                attention to detail, ensuring you find the perfect piece to adorn yourself or gift to a loved one.</p>
      
        <div class="mt-3">
            <img src="/public/images/Slider1.jpg" alt="Slider1" class="img-fluid">
        </div>
        </div>
    </div> 
</div>
<!--product section-->
<div class="container mt-1 py-1" id="product">
    <div class="text-center py-3">
        <h1>Featured Products</h1>
        <div class="hr"></div>
    </div>
    <div class="row row-cols-2 row-cols-md-5 g-4">
        <div class="col">
            <img src="/public/images/Diamond Ring.jpg" class="card-img-top" alt="rings">
                <h4 class="mt-3">Ring</h4>
        </div>
         <div class="col">
            <img src="/public/images/Bracelet.jpg" class="card-img-top" alt="Bracelet">
                <h4 class="mt-3">Bracelet</h4>
        </div>
         <div class="col">
            <img src="/public/images/earring.jpg" class="card-img-top" alt="earring">
                <h4 class="mt-3">Earring</h4>
        </div>
         <div class="col">
            <img src="/public/images/ankelet.jpg" class="card-img-top" alt="Ankelet">
                <h4 class="mt-3">Ankelet</h4>
        </div>
         <div class="col">
            <img src="/public/images/dolphine necklace.jpg" class="card-img-top" alt="necklace">
                <h4 class="mt-3">Necklace</h4>
        </div>
    </div>
</div>
<!--New Products-->
<div class="container mt-5 py-5 position-relative">
  <div class="text-center py-5">
    <h1>New Products</h1>
    <div class="hr"></div>
  </div>

  <!-- Scroll Buttons -->
  <button class="scroll-btn left" onclick="scrollProducts(-1)">
    <i class="bi bi-chevron-left"></i>
  </button>
  <button class="scroll-btn right" onclick="scrollProducts(1)">
    <i class="bi bi-chevron-right"></i>
  </button>

  <!-- Scrollable Row -->
  <div class="product-scroll d-flex overflow-auto" id="productScroll">
    <% newProducts.forEach(p => { %>
      <div class="product-card card mx-2 flex-shrink-0" style="width: 200px;">
        <img src="/public/images/<%= p.image %>" class="card-img-top" alt="<%= p.name %>">
        <div class="card-body d-flex flex-column justify-content-between p-2">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-text">$<%= p.price %></p>
          <a href="/product/<%= p.id %>" class="btn btn-sm">View</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<footer>
    <%- include('partials/footer.ejs') %>
    
</footer>
<script>
function scrollProducts(direction) {
  const container = document.getElementById("productScroll");
  const scrollAmount = 220; // width of one card + margin
  container.scrollBy({
    left: direction * scrollAmount,
    behavior: "smooth"
  });
}
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>

</html>