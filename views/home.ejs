<html>

<head>
    <title>Silver Elegance</title>
    <link href="/public/css/style.css" rel="stylesheet">
    <!-- Bootstrap CSS icon link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">

</head>

<body>
<header>
<!--Corousel-->
<%- include('partials/slider.ejs') %>
</header>
<!--navbar-->
<%- include('partials/navbar1.ejs') %>
<!--about section-->
<div class="container-fluid px-4 mt-1 py-5" id="about">
    <div class="text-center py-3">
        <h1>About Us</h1>
        <div class="hr"></div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src="/public/images/ring.jpg" class="img-fluid image1" alt="ring">
        </div>
        <div class="col-md-6">
            <h5 class="about-text"> Our Perfect Silver Jewellery</h5>
            <h2>Let's create your perfect look.</h2>
            <p>Welcome to Silver Elegance, Our collection features handcrafted pieces that blend timeless elegance with modern design. Each item is crafted with care and
                attention to detail, ensuring you find the perfect piece to adorn yourself or gift to a loved one.</p>
      
        <div class="mt-3">
            <img src="/public/images/Slider1.jpg" alt="Slider1" class="img-fluid">
        </div>
        </div>
    </div> 
</div>
<!--product section-->
<!-- Featured Products Section -->
<div class="container-fluid cf py-5" id="product">
  <div class="container text-center mb-5">
    <h1 class="display-5 fw-bold">Featured Products</h1>
    <div class="hr"></div>
  </div>

  <div class="row row-cols-2 row-cols-md-5 g-4 justify-content-center px-3">
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <img src="/public/images/Diamond Ring.jpg" class="card-img-top rounded" alt="Ring" style="height:240px; object-fit:cover;">
        <div class="card-body text-center">
          <h5 class="card-title">Ring</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <img src="/public/images/Bracelet.jpg" class="card-img-top rounded" alt="Bracelet" style="height:240px; object-fit:cover;">
        <div class="card-body text-center">
          <h5 class="card-title">Bracelet</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <img src="/public/images/earring.jpg" class="card-img-top rounded" alt="Earring" style="height:240px; object-fit:cover;">
        <div class="card-body text-center">
          <h5 class="card-title">Earring</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <img src="/public/images/ankelet.jpg" class="card-img-top rounded" alt="Anklet" style="height:240px; object-fit:cover;">
        <div class="card-body text-center">
          <h5 class="card-title">Anklet</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <img src="/public/images/dolphine necklace.jpg" class="card-img-top rounded" alt="Necklace" style="height:240px; object-fit:cover;">
        <div class="card-body text-center">
          <h5 class="card-title">Necklace</h5>
        </div>
      </div>
    </div>
  </div>
</div>

<!--New Products-->
<!-- New Products Section (Full Width) -->
<div class="container-fluid py-5 position-relative">
  <div class="container text-center mb-4">
    <h1 class="display-5 fw-bold">New Products</h1>
    <div class="hr"></div>
  </div>

  <!-- Scroll Buttons -->
  <button class="scroll-btn left position-absolute top-50 start-0 translate-middle-y text-white border-0 rounded-circle" onclick="scrollProducts(-1)" style="z-index: 10; width: 40px; height: 40px;">
    <i class="bi bi-chevron-left"></i>
  </button>
  <button class="scroll-btn right position-absolute top-50 end-0 translate-middle-y text-white border-0 rounded-circle" onclick="scrollProducts(1)" style="z-index: 10; width: 40px; height: 40px;">
    <i class="bi bi-chevron-right"></i>
  </button>

  <!-- Scrollable Product Cards -->
  <div class="product-scroll d-flex overflow-auto px-5" id="productScroll">
    <% newProducts.forEach(p => { %>
      <div class="product-card card mx-3 flex-shrink-0" style="width: 200px;">
        <img src="/public/images/<%= p.image %>" class="card-img-top" alt="<%= p.name %>" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column justify-content-between p-2 text-center">
          <h6 class="card-title mb-1"><%= p.name %></h6>
          <p class="card-text fw-bold text-secondary mb-2">$<%= p.price %></p>
          <a href="/product/<%= p.id %>" class="btn btn-outline-dark btn-sm">View</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<footer>
    <%- include('partials/footer.ejs') %>
    
</footer>
<script>
function scrollProducts(direction) {
  const container = document.getElementById("productScroll");
  const scrollAmount = 220; // width of one card + margin
  container.scrollBy({
    left: direction * scrollAmount,
    behavior: "smooth"
  });
}
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>

</html>